# Shared secret used for validating incoming webhook signatures (you define this in app store connect)
SHARED_SECRET=your_shared_secret_here

# Microsoft Teams Incoming Webhook URL (keep real URL private!)
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# Slack Incoming Webhook URL (keep real URL private!)
SLACK_WEBHOOK_URL=https://your-slack-webhook-url

# Optional: App Store app listing URL
APP_STORE_URL=https://apps.apple.com/app/your-app-id

# Optional: Preferred timezone (e.g., Europe/Athens, UTC)
TIMEZONE=UTC

# App metadata for feedback links
APP_ADAM_ID=0123456789
APP_BUNDLE_ID=com.awesome.app
APP_PLATFORM_ID=iOS

# Test webhook related settings
ENABLE_TEST_ENDPOINT=true
INTERNAL_TEST_TOKEN=super_secret_token

# App Store Connect API Configuration (for fetching version/build info)
# Use base64 encoded private key
APPSTORE_CONNECT_PRIVATE_KEY_BASE64=your_base64_encoded_private_key_here
# Your App Store Connect Key ID (found in App Store Connect)
APPSTORE_CONNECT_KEY_ID=XXXXXXXXXX
# Your App Store Connect Issuer ID (found in App Store Connect)
APPSTORE_CONNECT_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
